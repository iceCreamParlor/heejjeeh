<div id="login" class="modal">
  <div class="modal-content">
    <div class="row">
      <div class="col s12 m12 l12"></div>
      <div class="col s12 m12 l12">
        <h2 style="color: white;">Login</h2>
    
        <%= form_for(:user, :url => session_path(:user), :html => {:id => "loginForm"}) do |f| %>
          <div class="field">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>
    
          <div class="field">
            <%= f.label :password %><br />
            <%= f.password_field :password, autocomplete: "current-password" %>
          </div>

          </div>
          <div class="col s6 m6 l6" style="margin-top: 20px;">
            <div class="actions">
              <button id="loginButton" type="button" class= "btn-large waves-effect waves-light">
                  <i class="large material-icons">fingerprint</i>
              </button>
            </div>
          </div>
          
        <% end %>
      
    </div>
  </div>
</div>
<script>
  document.getElementById('loginButton').addEventListener('click', function(){
    document.getElementById('loginForm').submit();
  })
</script>