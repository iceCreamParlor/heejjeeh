
<div class="container" style="margin-top: 30px;">
  <h1 class="white-text">Portfolio</h1>
  <div class="row" style="margin-top: 30px;">
    <% @portfolios.each do |portfolio| %>
    <%= link_to portfolio_path(portfolio) do %>
    <div class="col s12 m4 l4">
      
        <div class="card">
          <div class="card-image">
            <img src="<%= portfolio.thumbnail %>">
            <!-- <span class="card-title"><%= portfolio.title %></span> -->
            <!-- <a class="btn-floating halfway-fab waves-effect waves-light red"><i class="material-icons">add</i></a> -->
          </div>
          <div class="card-content">
            <h4 class="black-text"><%= portfolio.title %></h4>
            <% portfolio.hashtags.each do |hashtag| %>
              <div class="chip">
                <%= hashtag.title %>
              </div>
            <% end %>
          </div>
        </div>
      
    </div>
    <% end %>
    <% end %>
  </div>
</div>